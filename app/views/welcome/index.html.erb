<h1>WELCOME!</h1>

<% if current_user %>
    <%= link_to "Log out", '/logout', method: :delete %>
<% else %>
    <%= link_to "Register as a User", "/register" %>
    <%= link_to "I already have an account", "/login" %>
<% end %>

<%= form_with url: search_path, method: :post, local: true do |form|  %>
  <%= form.label 'Search for Senate Members' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
<% end %>

<%= form_with url: search_state_path, local: true do |form| %>
  <%= form.label :search_state, 'Search For House Members Of A Specific State' %>
  <%= form.select :state, us_states %>
  <%= form.submit 'Search By State' %>
<% end %>